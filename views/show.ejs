<!doctype html>
<html lang="pt-BR" class="h-100">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>muito gostoso ;)</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
    <link href="../assets/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="sticky-footer-navbar.css" rel="stylesheet">
    <link rel="icon" href="img/man-cook_1f468-200d-1f373.ico">
</head>

<body class="d-flex flex-column h-100">
    <section class="header">
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #15b7b9;">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">muito gostoso</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/blog">Blog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/cadastro-receitas">Envie sua receita</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/show">Receitas enviadas</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </section>

    <section id="main">
        <div class="container-fluid">
            <h2 class="text">Receitas</h2>
            <table class="table">
                <thead>
                    <tr style="text-align: center;">
                        <th>Nome</th>
                        <th>Ingredientes</th>
                        <th>Instruções</th>
                    </tr>
                </thead>
                <tbody style="text-align: center;">
                    <% data.forEach(function(details) { %>
                    <tr>
                        <td><%= details.nome_receita %></td>
                        <td><%= details.ingredientes %></td>
                        <td><%= details.modo_preparo %></td>
                        <td>
                            <button class="btn btn-primary">
                                <a class="text-light" href="/delete">Deletar</a>
                            </button>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </section>



    <footer class="footer mt-auto py-3">
        <div class="container">
            <p><strong>muito gostoso - all rights reserved Ⓒ 2022</strong></p>
        </div>
    </footer>

    <script src="js/js.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../assets/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>